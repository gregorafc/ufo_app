<h1>Logowanie</h1>

<%= form_tag sessions_path do %>
  
  <div class="field">
    <%= label_tag :login %><br />
    <%= text_field_tag :login, params[:login] %>
  </div>
  
  <div class="field">
    <%= label_tag :password, 'Hasło' %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Zaloguj" %>
  </div>
  <div class="action"><%= link_to 'Powrót', root_path %>
  </div>
<% end %>

