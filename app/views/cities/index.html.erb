<h1>Lista miast odwiedzonych przez UFO</h1>

<table>
  <thead>
    <tr>
      <th>Misato</th>
      <th>Liczba spotkan</th>
      <th>Liczba obiektow</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @cities.each do |city| %>
        <td><%= city.city_name %></td>
        <td><%= city.contacts.count %></td>
        <td><%= city.sum_object %></td>
        <td><%= link_to 'Podglad', city_path(city) %>
    </tr>
      <% end %>
  </tbody>
</table>

<%= link_to 'Dodaj nowe kontakt lub miasto', new_city_path %>

