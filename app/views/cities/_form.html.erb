<%= form_for @contact, url: {action: "create"} do |f| %>
  <%= f.label :city_id %><br>
  <% cities_array = City.all.map {|city| city.city_name} %>
  <%= select_tag(:city_id, options_for_select(cities_array)) %>
  <%= f.label :date_contact, 'Data kontaktu' %><br>
  <%= f.date_select :date_contact %><br>
  <% end %>